{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "vite/client"],
    "lib": ["ES2022", "DOM"]
  },
  "include": ["src"],
  "exclude": [".storybook", "dist"]
}
